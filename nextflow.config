/*
 *-------------------------------------  
 * HYBRID ASSEMBLY MAIN CONFIGURATION
 *-------------------------------------
 * Default config for all environments
 */


manifest {
    mainScript = 'main.nf'
    author = 'Caspar GroÃŸ'
    homePage = 'https://github.com/caspargross/hybridAssembly'
    description = 'Hybrid assembly pipeline for plasmid analysis'
    name = 'HybridAssembly'
    nextflowVersion = '>=0.32.0'
    version = '0.5'
}

profiles 
    {
    // Default profile, uses Docker to run
    standard {
        includeConfig 'conf/base.config'
        includeConfig 'conf/docker.config'
    }
    // Dependencies on local machine (using conda env) 
    local {
        includeConfig 'conf/base.config'
    }   
    // Run test dataset with docker
    test {
        includeConfig 'conf/test.config'
        includeConfig 'conf/docker.config'
    }
    // Run longread test dataset with docker
    testlr {
        includeConfig 'conf/testlr.config'
        includeConfig 'conf/docker.config'
    }
    // Run test with conda
    localtest {
        includeConfig 'conf/test.config'
    }
    // Run profile for app with singularity
    localtest {
        includeConfig 'conf/app.config'
        includeConfig 'conf/singularity.config'
    }
}


