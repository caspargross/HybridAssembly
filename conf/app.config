/*
 *-------------------------------------  
 * HYBRID ASSEMBLY APP CONFIGURATION
 *-------------------------------------
 * Configuration to run inside the pathoLogic app
 */

params {
    help = false 
    version = false
    input = false                // Required: select input file
    mode = 'unicycler'           // Mode Default: 'all'
    outDir = "${PWD}/assembly"   // Path to output directory
}

// Safe bash settings   
process.shell = ['/bin/bash', '-e']

singularity {
    enabled = true
}

executor {
    name = 'local'
    memory = '20 G'
    cpus = '30'
    queueSize = 5
    container = 'docker://caspargross/hybridassembly'
}


