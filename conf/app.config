/*
 *-------------------------------------  
 * HYBRID ASSEMBLY APP CONFIGURATION
 *-------------------------------------
 * Configuration to run inside the pathoLogic app
 */

params {
    help = false 
    version = false
    outDir = false

    max_memory = 6.G
    max_cpus = 4
}

// Safe bash settings   
process.shell = ['/bin/bash', '-e']

singularity {
    enabled = true
}

executor {
    container = 'docker://caspargross/hybridassembly'
}


