/*
 *-------------------------------------  
 * HYBRID ASSEMBLY APP CONFIGURATION
 *-------------------------------------
 * Configuration to run inside the pathoLogic app
 */

params {
    help = false 
    version = false
    outDir = false
    input = false
    outDir = false
    mode = false

    max_memory = 6.GB
    max_cpus = 4
    max_time = 240.h
    
    genomeSize = 5300000
    targetLongReadCov = 100
    targetShortReadCov = 100
}

// Safe bash settings   
process.shell = ['/bin/bash', '-e']

//singularity {
//    enabled = true
//}

//executor {
//    container = 'docker://caspargross/hybridassembly'
//}

process {
  // Check the defaults for all processes
  cpus = { check_max( 4 * task.attempt, 'cpus' ) } 
  memory = { check_max( 8.GB * task.attempt, 'memory' ) } 
  time = { check_max( 2.h * task.attempt, 'time' ) } 

  errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
  maxRetries = 1 
  maxErrors = '-1'
}

